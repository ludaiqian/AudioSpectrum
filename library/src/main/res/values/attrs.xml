<resources>
    private int mMaxLevel = DEFAULT_MAX_LEVEL;
    private int[] mItemLevels;
    private int mItemWidth = DEFAULT_ITEM_WIDTH;
    private int mItemHeight = DEFAULT_ITEM_HEIGHT;
    private int mSpacing = DEFAULT_SPACING;
    private Paint mPaint;
    private int mItemCount = DEFAULT_ITEM_COUNT;
    private int mCenterHeight;
    private int mMinLevel = DEFAULT_MIN_LEVEL;
    <declare-styleable name="SpectrumView">
        <attr name="maxLevel" format="integer" /><!-- 最大level，决定长方条高度最大值，和minLevel一起决定长方条振幅的高度范围-->
        <attr name="minLevel" format="integer" /><!-- 最小level，决定长方条高度最小值，和maxLevel一起决定长方条振幅的高度范围-->
        <attr name="itemCount" format="integer" /><!-- 长方条个数-->
        <attr name="spacing" format="integer" /><!-- 长方条间距-->
        <attr name="itemWidth" format="integer" /><!-- 长方条宽度-->
        <attr name="itemUnitHeight" format="integer" /><!-- 长方条的单位高度，长方条高度=(itemUnitHeight*当前level)-->
        <attr name="itemColor" format="color" /><!--长方条颜色-->
    </declare-styleable>

</resources>
